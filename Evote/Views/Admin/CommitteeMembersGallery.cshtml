@*<div class="main-grid">*@
<div class="agile-grids">
    <!-- eligible members gallery -->
    <div class="grids-heading gallery-heading">
        <h2>Committee Members Gallery</h2>
    </div>
    <div class="banner">
        <h2>
            <a href="@Url.Action("Dashboard", "Admin")">Admin</a>
            <i class="fa fa-angle-right"></i>
            <span><a href="@Url.Action("CommitteeMembersGallery", "Admin")" title="Gallery for Eligible Members">CommitteeMembersGallery</a></span>
        </h2>
    </div>
    <div class="gallery-grids">
        <br /><br />
        @{
            var counter = 0;
            Committee_member[] itemarray = new Committee_member[db.Committee_member.Count()];
            foreach (var itm in db.Committee_member)
            {
                itemarray[counter] = itm;
                counter++;
            }
            counter = 0;
        }
        @foreach (var item in db.Committee_member)
        {
            <div class="col-md-3 agile-gallery-grid">
                <div class="agile-gallery">
                    <a href="~/Admin/GetCommitteeFile/@item.Id" class="lsb-preview" data-lsb-group="header">
                        <img src="~/Admin/GetCommitteeFile/@item.Id" />
                        <div class="agileits-caption">
                            <h4>@item.EligibleMember.fullname</h4>
                            <h5>@item.EligibleMember.email</h5>
                            <p>@item.EligibleMember.phone_number</p>
                            <p>@item.EligibleMember.membership_number</p>
                        </div>
                    </a>
                </div>
            </div>
            if (counter % 4 == 3)
            {
                <div class="clearfix"> </div>
                <br /><br />
            }
            counter++;
        }
        <div class="clearfix"> </div>
        <script>
		    $(window).load(function() {
			    $.fn.lightspeedBox();
		    });
        </script>
    </div>
    <!-- //eligible members gallery -->
</div>
