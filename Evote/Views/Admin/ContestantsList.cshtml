<div class="agile-grids" style="min-height:100vh">
    <!-- contestant-page -->
    <div class="progressbar-heading grids-heading">
        <h2 style="margin:0;padding:0;">Contestants List</h2>
    </div>
    <div class="banner">
        <h2>
            <a href="@Url.Action("Dashboard", "Admin")">Admin</a>
            <i class="fa fa-angle-right"></i>
            <span><a href="@Url.Action("ContestantsList", "Admin")">ContestantsList</a></span>
        </h2>
    </div>
    @*<div id="datatable_wrapper" class="dataTables_wrapper">*@
        <table id="datatable" class="table table-striped table-bordered table-hover table-responsive" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Fullname</th>
                    <th>Phone Number</th>
                    <th>Membership Number</th>
                    <th>Email</th>
                    <th>Post</th>
                    @*<th></th>
                    <th></th>*@
                </tr>
            </thead>
            <tbody>
                @{ var a = 1;}
                @foreach (var item in db.Contestants.Where(dbl => dbl.status == true))
            {
                    <tr>
                        <td>@a</td>
                        <td>@item.EligibleMember.fullname</td>
                        <td>@item.EligibleMember.phone_number</td>
                        <td>@item.EligibleMember.membership_number</td>
                        <td>@item.EligibleMember.email</td>
                        <td>@item.VotingSession.Position.Post</td>
                        @*<td><a href="@Url.Action("Profile4Contestants", "Admin", new { Id = item.Id })"><div class="btn btn-sm btn-primary btn-block">Show details</div></a></td>
                        <td><a href="@Url.Action("EditContestants", "Admin", new { Id = item.Id })"><div class="btn btn-sm btn-warning btn-block">Edit content</div></a></td>*@
                    </tr>
                    a++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>S/N</th>
                    <th>Fullname</th>
                    <th>Phone Number</th>
                    <th>Membership Number</th>
                    <th>Email</th>
                    <th>Post</th>
                    @*<th></th>
                    <th></th>*@
                </tr>
            </tfoot>
        </table>
    @*</div>*@
    
    @* //may also include the option to show previous contestants *@
    <div class="tool-tips widget-shadow">
        <h4 class="title2">See Also :</h4>
        <div class="bs-example-tooltips" style="width:100%;">
            <div class="col-md-3">
                <a class="btn btn-lg btn-success" style="width:80%;text-align:center;font-size:0.8em;" href="@Url.Action("EligibleMembersList", "Admin")" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="View a list of all eligible members">Eligible Members</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-lg btn-info" style="width:80%;text-align:center;font-size:0.8em;" href="@Url.Action("CommitteeMembersList", "Admin")" data-toggle="tooltip" data-placement="top" title="" data-original-title="A list of all the various committee members">Committee Members</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-lg btn-warning" style="width:80%;text-align:center;font-size:0.8em;" href="@Url.Action("ContestantsList", "Admin")" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="You can see the list of contestants">Contestants</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-lg btn-danger" style="width:80%;text-align:center;font-size:0.8em;" href="@Url.Action("MembersList", "Admin")" data-toggle="tooltip" data-placement="top" title="" data-original-title="A combination of everybody in the various lists">All Members</a>
            </div>
            <script>
                $(function () {
					$('[data-toggle="tooltip"]').tooltip()
				})</script>
        </div>
    </div>
