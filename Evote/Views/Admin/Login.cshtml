@using Evote.Models.Helpers
@model Evote.Models.SignIn
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Admin Login Panel :: ICAN</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="login, ICAN" />
    <script type="application/x-javascript"> 
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    </script>
    <link href="~/admincss/bootstrap.css" rel="stylesheet" />
    <link href="~/admincss/style.css" rel="stylesheet" />
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link href="~/admincss/font.css" rel="stylesheet" />
    <link href="~/admincss/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body class="signup-body">
    <div class="agile-signup">
        @Html.BootstrapValidationSummary()
        @Html.ShowFlashMessage()
        <div class="content2">
            <div class="grids-heading gallery-heading signup-heading">
                <h2>Login</h2>
            </div>
            <form action="@Url.Action("Login","Admin")" method="post">
                <input type="text" name="Name" value="" onload="this.value = '';" @*onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Username';}"*@ />
                <input type="password" name="Password" value="" onload="this.value = '';" @*onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}"*@ />
                <input type="submit" class="register" value="Login">
            </form>
            <div class="signin-text">
                <div class="text-left">
                    <p><a href="javascript:return false;" data-toggle="modal" data-target="#myModal"> Forgot Password? </a></p>
                </div>
                <div class="text-right">
                    <p><a href="javascript:return false;" data-toggle="modal" data-target="#myModal2"> Change Password</a></p>
                </div>
                <div class="clearfix"> </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:#fcb216;color:#fff;">
                            <button type="button" class="close" data-dismiss="modal" style="color:#000;">&times;</button>
                            <h4 class="modal-title">Retrieve Password</h4>
                        </div>

                        <div class="modal-body">
                            <form action="@Url.Action("ForgotPassword","Admin",new { PageId = 2 })" method="post">
                                <label for="Name" class="col-sm-2 control-label">Username: </label>
                                <input type="text" name="Name" id="Name" style="margin-top:0;" />
                                <input type="submit" class="register" value="Send" style="margin-top:10px;" />
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" style="color:#fff;">Close</button>
                        </div>

                    </div>

                </div>
            </div>
            <!-- Modal2 -->
            <div class="modal fade" id="myModal2" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:#fcb216;color:#fff;">
                            <button type="button" class="close" data-dismiss="modal" style="color:#000;">&times;</button>
                            <h4 class="modal-title">Change Password</h4>
                        </div>
                        <div class="modal-body">
                            <form action="@Url.Action("ChangePassword","Admin",new { PageId = 2 })" method="post">
                                <label for="username" class="col-sm-12 control-label">Username: </label>
                                <input type="text" name="username" id="username" style="margin-top:0;margin-bottom:15px;" />

                                <label for="oldpassword" class="col-sm-12 control-label">Old Password: </label>
                                <input type="password" name="oldpassword" id="oldpassword" style="margin-top:0;margin-bottom:15px;" />

                                <label for="newpassword" class="col-sm-12 control-label">New Password: </label>
                                <input type="password" name="newpassword" id="newpassword" style="margin-top:0;margin-bottom:15px;" />

                                <label for="confirmnewpassword" class="col-sm-12 control-label">Confirm New Password: </label>
                                <input type="password" name="confirmnewpassword" id="confirmnewpassword" style="margin-top:0;" />

                                <input type="submit" class="register" value="Send" style="margin-top:10px;" />
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" style="color:#fff;">Close</button>
                        </div>
                    </div>

                </div>
            </div>
            <h5 style="color:#fff;font-weight:400">- Not an admin? -</h5>
            <a href="@Url.Action("Login","Home")">Back To Home</a>
            <h5 style="color:#fff;font-weight:400">- Or visit -</h5>
            <div class="footer-icons">
                <ul>
                    <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#" class="twitter facebook"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#" class="twitter chrome"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#" class="twitter dribbble"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                </ul>
            </div>
        </div>
        <!-- footer -->
        <div class="copyright">
            <p>
                &copy; 2018 Simple Signin Form. All rights reserved | Design by
                <a href="http://www.3consult-ng.com/home/">3Consulting Limited</a>
            </p>
        </div>
        <!-- //footer -->
    </div>
    <script src="~/adminjs/proton.js"></script>
</body>
</html>