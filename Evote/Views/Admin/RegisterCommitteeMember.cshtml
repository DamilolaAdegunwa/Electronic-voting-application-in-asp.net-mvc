                                <label for="fullname" class="col-sm-2 control-label">Fullname</label>
                                <div class="col-sm-9">
                                    <input type="text" name="fullname" class="form-control" id="fullname" placeholder="Fullname" required>
                                </div>
                            </div>
                            
