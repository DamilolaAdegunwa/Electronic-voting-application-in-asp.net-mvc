@using Evote.Models.Helpers
@model Evote.Committee_member

@{
    ViewBag.Title = "Register Committee Member";
}

<div class="agile-grids" style="min-height:100vh">
    <!-- RegisterCommitteeMember-page -->
    @Html.BootstrapValidationSummary()
    @Html.ShowFlashMessage()
    <div class="progressbar-heading grids-heading">
        <h2>Register Committee Member</h2>
    </div>
    <div class="banner">
        <h2>
            <a href="@Url.Action("Dashboard", "Admin")">Admin</a>
            <i class="fa fa-angle-right"></i>
            <span><a href="@Url.Action("RegisterCommitteeMember", "Admin")">RegisterCommitteeMember</a></span>
        </h2>
    </div>
